<?xml version="1.0" encoding="UTF-8"?>
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

  <!-- MatchingEngine File Appender -->
  <appender name="MatchingEngineFile" class="org.apache.log4j.FileAppender">
    <param name="File" value="${DATS_LOG_HOME}/${LOG_FILE_NAME}" />
    <param name="Append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} [%t] %-5p %c{1} - %m%n" />
    </layout>
  </appender>

  <!-- Console Appender -->
  <appender name="Console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %-5p %c{1} - %m%n" />
    </layout>
  </appender>

  <!-- MatchingEngine specific logger - SET TO DEBUG -->
  <logger name="MatchingEngine">
    <level value="DEBUG" />
    <appender-ref ref="MatchingEngineFile" />
    <appender-ref ref="Console" />
  </logger>

  <!-- Root logger -->
  <root>
    <level value="INFO" />
    <appender-ref ref="Console" />
  </root>

</log4j:configuration>
